{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>the-guild-org/shared-config:renovate",
    ":preserveSemverRanges"
  ],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "groupName": "graphql-tools",
      "matchPackageNames": ["/@graphql-tools/"]
    },
    {
      "groupName": "whatwg-node",
      "matchPackageNames": ["/@whatwg-node/*/"]
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "matchPackageNames": [
        "!/@changesets/*/",
        "!/typescript/",
        "!/^@theguild//",
        "!/next/",
        "!/@whatwg-node/*/",
        "!/@graphql-tools/*/",
        "!/graphql-jit/",
        "!/graphql/",
        "!/newrelic/",
        "*"
      ]
    }
  ],
  "ignorePaths": [
    "**/__tests__/**",
    "**/test/**",
    "**/tests/**",
    "**/__fixtures__/**"
  ],
  "ignoreDeps": ["faker", "nextra"],
  "baseBranches": ["main"]
}
