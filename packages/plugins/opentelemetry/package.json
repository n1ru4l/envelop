{
  "name": "@envelop/opentelemetry",
  "version": "7.1.3",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/graphql-hive/envelop.git",
    "directory": "packages/plugins/opentelemetry"
  },
  "author": "Dotan Simha <dotansimha@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/typings/index.d.cts",
        "default": "./dist/cjs/index.js"
      },
      "import": {
        "types": "./dist/typings/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "default": {
        "types": "./dist/typings/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./*": {
      "require": {
        "types": "./dist/typings/*.d.cts",
        "default": "./dist/cjs/*.js"
      },
      "import": {
        "types": "./dist/typings/*.d.ts",
        "default": "./dist/esm/*.js"
      },
      "default": {
        "types": "./dist/typings/*.d.ts",
        "default": "./dist/esm/*.js"
      }
    },
    "./package.json": "./package.json"
  },
  "typings": "dist/typings/index.d.ts",
  "peerDependencies": {
    "@envelop/core": "workspace:^",
    "graphql": "^14.0.0 || ^15.0.0 || ^16.0.0"
  },
  "dependencies": {
    "@envelop/on-resolve": "workspace:^",
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/sdk-trace-base": "^1.11.0",
    "tslib": "^2.5.0"
  },
  "devDependencies": {
    "@envelop/core": "workspace:^",
    "@graphql-tools/schema": "^10.0.2",
    "@opentelemetry/context-async-hooks": "^1.20.0",
    "@repeaterjs/repeater": "^3.0.5",
    "graphql": "16.10.0",
    "typescript": "5.8.2"
  },
  "publishConfig": {
    "directory": "dist",
    "access": "public"
  },
  "sideEffects": false,
  "buildOptions": {
    "input": "./src/index.ts"
  },
  "typescript": {
    "definition": "dist/typings/index.d.ts"
  }
}
