{
  "private": true,
  "author": "Dotan Simha <dotansimha@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "./website",
    "./packages/*",
    "./packages/plugins/*",
    "./examples/apollo-server",
    "./examples/graphql-ws",
    "./examples/simple-http",
    "./examples/graphql-helix",
    "./examples/lambda-aws",
    "./examples/azure-functions",
    "./examples/google-cloud-functions",
    "./examples/cloudflare-workers"
  ],
  "scripts": {
    "prepare": "husky install",
    "benchmark": "NODE_ENV=production ts-node --project tsconfig.benchmark.json benchmark/execute.case.ts",
    "postinstall": "patch-package",
    "lint": "eslint --config .eslintrc.json --ext .ts .",
    "prebuild": "rimraf packages/*/dist",
    "build": "tsc --project tsconfig.json && bob build",
    "test": "jest",
    "test:ci": "jest --coverage",
    "prerelease": "yarn build",
    "release": "changeset publish",
    "release:canary": "(node scripts/canary-release.js && yarn build && yarn changeset publish --tag alpha) || echo Skipping Canary...",
    "prettier": "prettier --ignore-path .gitignore --write --list-different \"**/*.{ts,tsx,graphql,yml}\""
  },
  "devDependencies": {
    "prettier": "2.3.1",
    "pretty-quick": "3.1.0",
    "apollo-server": "2.25.1",
    "@graphql-tools/schema": "7.1.5",
    "@types/benchmark": "2.1.0",
    "benchmark": "2.1.4",
    "ts-node": "10.0.0",
    "patch-package": "6.4.7",
    "@changesets/cli": "2.16.0",
    "@typescript-eslint/eslint-plugin": "4.26.1",
    "@typescript-eslint/parser": "4.26.1",
    "eslint": "7.28.0",
    "husky": "6.0.0",
    "lint-staged": "11.0.0",
    "@types/node": "15.6.1",
    "bob-the-bundler": "1.4.1",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-standard": "5.0.0",
    "eslint-config-prettier": "8.3.0",
    "@types/jest": "26.0.23",
    "ts-jest": "27.0.3",
    "rimraf": "3.0.2",
    "typescript": "4.3.2",
    "jest": "27.0.4"
  },
  "resolutions": {
    "@changesets/git": "1.1.1",
    "prettier": "2.3.1"
  },
  "lint-staged": {
    "packages/**/src/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{ts,tsx,graphql,yml}": [
      "prettier --write"
    ],
    "**/*.json": [
      "prettier --write"
    ]
  }
}
